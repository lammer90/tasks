<configuration>
    <appender name="appenderMagenta" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%magenta(%msg%n)</pattern>
        </encoder>
    </appender>

    <appender name="appenderCyan" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%cyan(%msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="magenta" level="INFO" additivity="false">
        <appender-ref ref="appenderMagenta"/>
    </logger>

    <logger name="cyan" level="INFO" additivity="false">
        <appender-ref ref="appenderCyan"/>
    </logger>
</configuration>